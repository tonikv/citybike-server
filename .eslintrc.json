{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": "./tsconfig.test.json"
  },
  "ignorePatterns": [
    "src/__tests__/**/*"
  ],
  "rules": {
    "no-console": "warn",
    "prettier/prettier": "error"
  },
  "env": {
    "node": true,
    "es2021": true
  }
}
